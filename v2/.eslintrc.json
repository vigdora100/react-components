{
  "extends": [
    "pretty-standard"
  ],
  "globals": {
    "jest": false
  },
  "plugins": [
      "react"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6":     true,
    "browser": true,
    "node":    true,
    "mocha":   true
  },
  "rules": {
    "indent": ["error", 2]
  }
}
